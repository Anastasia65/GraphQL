@model WebApplication2.Services.Character[]
@{
    ViewData["Title"] = "Sort Page";
}
<html>
<head>    
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <style>
    table {
        border: 1px solid #dddddd;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid black;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }

        button {
        margin: 10px;
        width: auto;
    }
    </style>
    <form action="/Home">
    <button style="float:left">Home</button>
    </form>
    <form action="/Description">
    <button>View description</button>
    </form>
<div class="table">
    <table>
        <tr>
@*            <td>image</td>*@
            <td>id</td>
            <td>full name</td>
            <td>gender</td>
            <td>birthdate</td>
            <td>age</td>
            <td>site</td>
        </tr>
         @foreach (var Character in Model)
            {
            <tr>
@*                <td><img src ="@Character.image"/></td>*@
                <td>@Html.DisplayFor(modelItem=>Character.id)</td>
                <td>@Html.DisplayFor(modelItem=>Character.name)</td>
                <td>@Html.DisplayFor(modelItem=>Character.gender)</td>
                <td>@Html.DisplayFor(modelItem=>Character.dateOfBirth)</td>
                <td>@Html.DisplayFor(modelItem=>Character.age)</td>
                <td>@Html.DisplayFor(modelItem=>Character.siteUrl)</td>
            </tr>
            }
    </table>
  
</div>
</body>
</html>